<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DangKy.DangKyActivity">

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Đăng ký"
        android:textStyle="bold"
        android:textColor="#66CCFF"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/register"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/border_bg_editext"
        android:textSize="20dp"
        android:hint="Nhập email"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/edtEmail"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/border_bg_editext"
        android:textSize="20dp"
        android:hint="Mật khẩu"
        android:ems="10"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/edtRePassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/edtPassword"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/border_bg_editext"
        android:textSize="20dp"
        android:hint=" Nhập lại mật khẩu"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tvRules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/edtRePassword"
        android:text="Bằng việc đăng kí, bạn đã đồng ý về điều khoản dịch vụ và chính sách bảo mật"
        android:textColor="#000"
        android:gravity="center_horizontal" />


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRules"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/border_danhmuc"
        android:text="Đăng ký"
        android:textColor="#fff"
        android:textSize="20dp"
        android:onClick="Register"/>

</RelativeLayout>